<div class="col-md-12">
  <div class="ccase">
    <%= link_to("New ccase", new_ccase_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Case ID</td>
        <td>Title</td>
        <td>Description</td>
        <td>Device</td>
        <td>Company</td>
        <td>Created Time</td>

      </tr>
    </thead>
    <tbody>
      <% @ccases.each do |ccase| %>
        <tr>
          <td>#</td>
          <td><%= ccase.id%></td>
          <td><%= link_to(ccase.title, ccase_path(ccase)) %></td>
          <td><%= ccase.description %></td>
          <td><%= ccase.device %></td>
          <td><%= ccase.custsite %></td>
          <td><%= ccase.created_at%></td>
          <td>
             <!-- <% if current_user && current_user == ccase.user %>
              <%= link_to("Edit", edit_ccase_path(ccase), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", ccase_path(ccase),    class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "Are you sure?" } )%>
            <% end %> -->
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
