<div class="col-md-12">
  <div class="ccase">
    <!-- <%= link_to("Edit", edit_ccase_path(@ccase), class: "btn btn-primary pull-right")%> -->

  </div>
  <h2><%= @ccase.title %></h2>
  <p><%= @ccase.description %></p>
  <p><%= @ccase.device%></p>
  <p><%= @ccase.custname %></p>
  <p><%= @ccase.custsite %></p>
  <p><%= @ccase.custphone %></p>
  <p><%= @ccase.custmail %></p>
  <p><%= @ccase.note %></p>
  <p><%= @ccase.user.email %></p>
</div>

  <table class="table">
    <%= link_to("New Log", new_ccase_post_path(@ccase), class: "btn btn-default pull-right")%>

    <thead>
     <tr>
        <th>Log Content</th>
        <th>Creator</th>
        <th>Created at</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td><%= post.user.email %></td>
          <td><%= post.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
