<h1>User Management</h1>

<table class="table">
<tr>
  <th>ID</th>
  <th>Email</th>
  <th>Status</th>
  <th>Actions</th>
</tr>
<% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.email %></td>
    <td>
     <% if user.is_admin %>
      <%= content_tag(:span, "", :class => "fa fa-user-circle-o") %>
     <% else %>
       <%= content_tag(:span, "", :class => "fa fa-user-o") %>
     <% end %>

    </td>
    <td><%= link_to "Edit", edit_admin_user_path(user), :class => "btn btn-default" %></td>
  </tr>
<% end %>
</table>
